<style>
    /* Custom styles for our super-cool range sliders */
    .range-slider { 
        -webkit-appearance: none; 
        width: 100%; 
        height: 8px; 
        border-radius: 5px; 
        background: #e2e8f0; 
        outline: none; 
        opacity: 0.8; 
        transition: opacity 0.2s; 
    }
    
    .range-slider:hover { 
        opacity: 1; 
    }
    
    .range-slider::-webkit-slider-thumb { 
        -webkit-appearance: none; 
        appearance: none; 
        width: 24px; 
        height: 24px; 
        border-radius: 50%; 
        background: #3b82f6; 
        cursor: pointer; 
        border: 4px solid white; 
        box-shadow: 0 0 5px rgba(0,0,0,0.2); 
    }
    
    .range-slider::-moz-range-thumb { 
        width: 24px; 
        height: 24px; 
        border-radius: 50%; 
        background: #3b82f6; 
        cursor: pointer; 
    }

    /* Styles for our awesome clickable diet preference cards */
    .diet-card {
        transition: all 0.2s ease-in-out;
    }
    
    .diet-card.active {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1);
        border-color: #3b82f6;
    }

    /* Heatmap container styles for better laptop display */
    .heatmap-grid {
        display: grid;
        grid-template-columns: repeat(30, 1fr);
        gap: 3px;
        max-width: 100%;
        overflow-x: auto;
        padding: 1rem 0;
    }

    /* Responsive adjustments for laptop screens */
    @media (min-width: 1024px) and (max-width: 1279px) {
        .heatmap-grid {
            grid-template-columns: repeat(15, 1fr);
            grid-template-rows: repeat(2, 1fr);
        }
    }

    @media (min-width: 1280px) {
        .heatmap-grid {
            grid-template-columns: repeat(30, 1fr);
            grid-template-rows: 1fr;
        }
    }

    /* Enhanced heatmap day styling */
    .heatmap-day {
        aspect-ratio: 1;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.75rem;
        transition: all 0.2s ease;
        cursor: pointer;
        position: relative;
        min-width: 24px;
        min-height: 24px;
    }

    .heatmap-day:hover {
        transform: scale(1.1);
        z-index: 10;
    }

    /* Score display styling */
    .score-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    .score-number {
        font-size: 0.7rem;
        font-weight: 700;
        line-height: 1;
    }

    .score-emoji {
        font-size: 0.6rem;
        line-height: 1;
        margin-top: 1px;
    }

    .no-log {
        font-size: 0.7rem;
        color: #9ca3af;
    }

    /* Enhanced tooltip styling */
    .heatmap-tooltip {
        position: absolute;
        bottom: calc(100% + 8px);
        left: 50%;
        transform: translateX(-50%);
        opacity: 0;
        visibility: hidden;
        transition: all 0.2s ease;
        z-index: 50;
        pointer-events: none;
    }

    .group:hover .heatmap-tooltip {
        opacity: 1;
        visibility: visible;
    }

    .tooltip-content {
        background: #1f2937;
        color: white;
        padding: 0.75rem;
        border-radius: 8px;
        font-size: 0.75rem;
        white-space: nowrap;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        border: 1px solid #374151;
    }

    .tooltip-content::after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 6px solid transparent;
        border-top-color: #1f2937;
    }

    .tooltip-date {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #f3f4f6;
    }

    .tooltip-score {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.25rem;
    }

    .score-label {
        color: #9ca3af;
    }

    .score-value {
        font-weight: 700;
        color: #10b981;
    }

    .tooltip-message {
        color: #d1d5db;
        font-style: italic;
    }

    .tooltip-no-log {
        text-align: center;
    }

    .no-log-text {
        display: block;
        color: #9ca3af;
        margin-bottom: 0.25rem;
    }

    .no-log-hint {
        display: block;
        color: #6b7280;
        font-size: 0.7rem;
    }

    /* Diet preferences grid for better laptop layout */
    .diet-preferences {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    @media (min-width: 1024px) {
        .diet-preferences {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    /* Calendar grid styles for month view */
